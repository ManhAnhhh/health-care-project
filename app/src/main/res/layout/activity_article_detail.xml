<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back2"
    android:fitsSystemWindows="true">

    <!-- Thanh công cụ -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbr_ArticleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF"
        android:backgroundTint="#7C17FF"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="Nội dung bài viết"
        app:titleTextColor="@android:color/white" />

    <!-- Nội dung bài viết -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp">

            <!-- Tiêu đề bài viết -->
            <TextView
                android:id="@+id/txtv_ArticleDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề bài viết"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Nội dung bài viết -->
            <TextView
                android:id="@+id/txtv_ArticleDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung bài viết"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>